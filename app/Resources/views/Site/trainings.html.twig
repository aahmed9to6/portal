{% extends 'site.html.twig' %}
{% block page_title %}{{ page_title }}{% endblock %}
{% block content %}
  {{ include(':Site:_top_banner.html.twig') }}
  <!-- CATEGORY LIST SECTION -->
  <section class="clearfix">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-xs-12">
          <div class="resultBar barSpaceAdjust">
            <h2>{{ 'We found'|trans(domain = 'training') }} <span>{{ trainings_count }}</span> {{ 'results for you'|trans(domain = 'training') }}</h2>
          </div>
          <div class="listContent">
            <div class="row">
              {% for training in trainings %}
                <div class="col-sm-5 col-xs-12">
                  <div class="categoryImage">
                    <img src="{{ uploads_path ~ '/' ~ training.thumb }}" alt="{{ training.title }}" class="img-responsive img-rounded">
                    <span class="label label-primary">{{ 'Verified'|trans(domain = 'training') }}</span>
                    <span class="label label-warning">{{ 'Incomplete'|trans(domain = 'training') }}</span>
                    <span class="label label-danger">{{ 'Outdated'|trans(domain = 'training') }}</span>
                  </div>
                </div>
                <div class="col-sm-7 col-xs-12">
                  <div class="categoryDetails">
                    <h2><a href="" style="color: #222222">{{ training.title }}</a></h2>
                      {% for track in training.tracks %}
                        <p>{{ 'Learn complete'|trans(domain = 'training') }} <span class="placeName"> {{ track.title }}</span></p>
                      {% endfor %}
                    {{ training.description|raw }}
                      <ul class="list-inline list-tag">
                        {% for tag in training.tags %}
                          <li><a href="">{{ tag.title }}</a></li>
                        {% endfor %}
                      </ul>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>

          <div class="paginationCommon blogPagination categoryPagination">
            <nav aria-label="Page navigation">
              <ul class="pagination">
                <li>
                  <a href="#" aria-label="{{ 'Previous'|trans(domain = 'training') }}">
                    <span aria-hidden="true"><i class="fa fa-angle-left" aria-hidden="true"></i></span>
                  </a>
                </li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li>
                  <a href="#" aria-label="{{ 'Next'|trans(domain = 'training') }}">
                    <span aria-hidden="true"><i class="fa fa-angle-right" aria-hidden="true"></i></span>
                  </a>
                </li>
              </ul>
            </nav>
          </div>

        </div>
      </div>
    </div>
  </section>
{% endblock %}